@page "/EmployeeDetails/{id}"
@page "/EmployeeDetails"


@inherits EmployeeDetailsBase

@if (Employee == null)
{
    <div class="spinner"></div>

}
else
{
    <div class="row justify-content-center m-3">
        <div class="col-sm-8">
            <div class="col-sm-8">
                <div class="card">
                    <div class="card-header">
                        <h1>@Employee.FirstName @Employee.LastName </h1> @Coordinates
                    </div>

                    <div class="card-body text-center">
                        @*<img src="@Employee.PhotoPath" class="card-img-top" @onmousemove="Mouse_Move" />*@
                        <img src="@Employee.PhotoPath" class="card-img-top" @onmousemove="@(e => Coordinates = $"X = {e.ClientX}, Y = {e.ClientY}")" />


                        <h4>Employee ID: @Employee.EmployeeId</h4>
                        <h4>Email: @Employee.Email</h4>
                        <h4>Department: @(Employee.Department == null ? "N/A" : Employee.Department.DepartmentName)</h4>

                        <button class="btn btn-primary" @onclick="@Button_Click">@ButtonText</button>
                    </div>

                    <div class="card-footer text-center @CssClass">
                        <a href="/" class="btn btn-primary">back</a>
                        <a href="#" class="btn btn-primary">Edit</a>
                        <a href="#" class="btn btn-danger">Delete</a>
                    </div>

                </div>
            </div>
        </div>
    </div>
}